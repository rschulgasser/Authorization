@using Authorization.Data;
@model HomePageVM

<div class="container">
    <main role="main" class="pb-3">

        <div class="row">
            @foreach (Ad ad in Model.Ads)
            {
                <div class="col-md-6 offset-md-3">
                    <div class="jumbotron">

                        <h5>Listed by @ad.Name</h5>
                        <h5>Listed on @ad.Date.ToLongDateString()</h5>
                        <h5>Phone Number: @ad.PhoneNumber.</h5>
                        <h3>Details:</h3>
                        <p style="white-space: pre-line;"> @ad.Description</p>


                        
                                <form method="post" action="/home/deletead">
                                    <input type="hidden" name="id" value="@ad.Id" />
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                           

                    </div>
                </div>
            }
        </div>
    </main>
</div>